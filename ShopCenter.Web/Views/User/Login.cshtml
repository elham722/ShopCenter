@model LoginViewModel
@{
    ViewData["Title"] = " ورود";
    Layout = null;
}
<partial name="PartialViews/_MetaTags" />
<title>@ViewData["Title"]</title>
<partial name="PartialViews/_Link" />
<div class="page-wrapper">
    <partial name="PartialViews/_RegisterAndLoginHeader" />
    <main class="page-content page-auth">
       
        <div class="auth-container">
            <div class="auth-title mb-3"> ورود  </div>
           
            <div class="auth-box ui-box">
               
                <form asp-controller="User" asp-action="Login" method="post" class="auth-form">
                    
                    <div class="form-element-row">
                        <input asp-for="Password" type="password" class="form-control" placeholder="رمز عبور">
                        <span asp-validation-for=Password class="text-danger"></span>
                        <hr />
                    </div>
                    <div style="margin:5px 0px">
                        <a style="color:crimson ;text-align:right;text-decoration:none" asp-controller="User" asp-action="ForgetPassword">فراموشی رمز عبور</a>
                    </div>
                  
                    <div class="form-element-row mb-3">
                        <button class="btn btn-primary"> ورود</button>
                    </div>
                    
                    <div class="form-element-row">
                        <div>
                            با ورود و یا ثبت نام در سایت شما <a href="#" class="link">
                                شرایط و
                                قوانین
                            </a> استفاده
                            از تمام سرویس های
                            سایت و <a href="#" class="link">قوانین حریم خصوصی</a> آن را می‌پذیرید.
                        </div>
                    </div>
                  
                </form>
                
            </div>
            
        </div>
      
    </main>
    <partial name="PartialViews/_RegisterAndLoginFooter" />
</div>

<partial name="PartialViews/_Scripts" />


