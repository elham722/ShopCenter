@model ForgetPasswordViewModel
@{
    ViewData["Title"] = " فراموشی رمز عبور";
    Layout = null;
}
<partial name="PartialViews/_MetaTags" />
<title>@ViewData["Title"]</title>
<partial name="PartialViews/_Link" />
<div class="page-wrapper">
    <partial name="PartialViews/_RegisterAndLoginHeader" />
    <main class="page-content page-auth">
        
        <div class="auth-container">
            <div class="auth-title mb-3">فراموشی رمز عبور  </div>
           
            <div class="auth-box ui-box">
                @if (ViewBag.EmailSent == true)
                {
                    <div class="alert alert-success">
                        ایمیل تغییر رمز عبور با موفقیت ارسال شد,برای بازیابی کلمه عبور وارد ایمیل خود شوید.
                      
                    </div>
                    <form asp-controller="User" asp-action="ForgetPassword" method="post" class="auth-form" hidden>
                        <div>
                            <p>برای تغییر رمز عبور خود ایمیل یا شماره همراهتان را وارد کنید</p>
                        </div>
                        <div class="form-element-row mb-3">
                            <input asp-for="EmailOrPhoneNumber" type="text" class="form-control" placeholder="ایمیل یا شماره همراه">
                            <span asp-validation-for=EmailOrPhoneNumber class="text-danger"></span>
                        </div>


                        <div class="form-element-row">
                            <button class="btn btn-primary" >ادامه</button>
                        </div>

                    </form>
                    <a href="/" class="btn btn-block btn-primary mb-3"><i class="ri-user-6-fill me-2"></i>بازگشت به صفحه اصلی</a>
                }
                else
                {
                    <form asp-controller="User" asp-action="ForgetPassword" method="post" class="auth-form">
                        <div>
                            <p>برای تغییر رمز عبور خود ایمیل یا شماره همراهتان را وارد کنید</p>
                        </div>
                        <div class="form-element-row mb-3">
                            <input asp-for="EmailOrPhoneNumber" type="text" class="form-control" placeholder="ایمیل یا شماره همراه">
                            <span asp-validation-for=EmailOrPhoneNumber class="text-danger"></span>
                        </div>


                        <div class="form-element-row">
                            <button class="btn btn-primary">ادامه</button>
                        </div>

                    </form>
                    
                }
             
                
            </div>
            
        </div>
        
    </main>
    <partial name="PartialViews/_RegisterAndLoginFooter" />
</div>

<partial name="PartialViews/_Scripts" />

