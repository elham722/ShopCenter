@model RegisterViewModel
@{
    ViewData["Title"] = "ثبت نام";
    Layout = null;
}
<partial name="PartialViews/_MetaTags" />
<title>@ViewData["Title"]</title>
<partial name="PartialViews/_Link" />
<div class="page-wrapper">
    <partial name="PartialViews/_RegisterAndLoginHeader" />
    <main class="page-content page-auth">
        
        <div class="auth-container">
            <div class="auth-title mb-3">  ایجاد رمز عبور </div>
            
            <div class="auth-box ui-box">
               
                <form asp-controller="User" asp-action="Register" method="post" class="auth-form">
                   
                    <div class="form-element-row mb-5">
                        <input asp-for="Password" type="password" class="form-control" placeholder="رمز عبور">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-element-row mb-5">
                        <input asp-for="RePassword" type="password" class="form-control" placeholder="تکرار رمز عبور">
                        <span asp-validation-for="RePassword" class="text-danger"></span>
                    </div>
                   
                    <div class="form-element-row mb-3">
                        <button class="btn btn-primary">ثبت نام</button>
                    </div>
                    
                   
                </form>
                
            </div>
           
        </div>
        
    </main>
    <partial name="PartialViews/_RegisterAndLoginFooter" />
</div>

<partial name="PartialViews/_Scripts" />



