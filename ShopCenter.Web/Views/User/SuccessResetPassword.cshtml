@{
    ViewData["Title"] = " موفقیت بازیابی رمز عبور";
    Layout = null;
}
<partial name="PartialViews/_MetaTags" />
<title>@ViewData["Title"]</title>
<partial name="PartialViews/_Link" />
<div class="page-wrapper">
    <partial name="PartialViews/_RegisterAndLoginHeader" />

    <main class="page-content page-auth">

        <div class="auth-container">
            <div class="auth-title mb-3">تبریک میگوییم!</div>

            <div class="auth-box ui-box">
                <div class="fs-6 fw-bold text-dark text-center mb-3">رمز عبور با موفقیت بازیابی شد</div>
                <div class="fs-7 fw-bold text-muted text-center mb-3">
                    رمز عبور شما با موفقیت بازیابی شد حال میتوانید با استفاده از این رمز عبور وارد سایت شوید
                </div>
                <a asp-action="RegisterOrLogin" asp-controller="User" class="btn btn-block btn-primary mb-3"><i class="ri-user-6-fill me-2"></i>ورود</a>
            </div>

        </div>

    </main>
    <partial name="PartialViews/_RegisterAndLoginFooter" />

</div>
<partial name="PartialViews/_Scripts" />
