@using PersianDate.Standard
@model DetailsUserViewModel
@{
    ViewData["Title"] = "جزئیات حساب کاربر";

}
<div class="modal-body">
    <div class="modal-header">
        @if(Model.FullName == " ")
        {
            <h3>نمایش اطلاعات کاربر</h3>
        }
        else
        {
            <h3>@Model.FullName</h3>
        }
        
    </div>
    <hr />
    <form method="get">
        <div class="row">
            <div class="col-md-8">

                <div class="form-group">
                    <span>ایمیل :</span>
                    @if (Model.Email == null)
                    {
                        <h6> اطلاعات کاربر وارد نشده است </h6>
                    }
                    else
                    {
                        <h5>@Model.Email</h5>
                    }
                    

                </div>
                <hr />
                <div class="form-group">
                    <span>شماره تماس:</span>
                    @if (Model.PhoneNumber == null)
                    {
                        <h6> اطلاعات کاربر وارد نشده است </h6>
                    }
                    else
                    {
                        <h5>@Model.PhoneNumber</h5>
                    }
                   

                </div>
                <hr />
                <div class="form-group">
                    <span> کد ملی:</span>
                    @if (Model.NationalNumber == null)
                    {
                        <h6> اطلاعات کاربر وارد نشده است </h6>
                    }
                    else
                    {
                        <h5>@Model.NationalNumber</h5>
                    }
                    

                </div>
                <hr />
                <div class="form-group">
                    <span>  تاریخ تولد:</span>
                    @if (Model.BirthDate == null)
                    {
                        <h6> اطلاعات کاربر وارد نشده است </h6>
                    }
                    else
                    {
                        <h5>@Model.BirthDate.ToFa("d MMM yyyy")</h5>
                    }
                   

                </div>
                <hr />
                <div class="form-group">
                    <span>  تاریخ عضویت:</span>
                    <h5>@Model.RegisterDate.ToFa("ddd d MMM yyyy")</h5>

                </div>
                <hr />
        
            </div>
            <div class="col-md-4">
                <div class="m-t-15">
                    <div class="form-control">
                        <p style="font-size:large">تصویر کاربر</p>
                    </div>
                    <div>
                        <img src="/assets/images/avatar/@Model.AvatarName" id="editImgAvatar" class="img img-thumbnail" alt="UserAvatar" style="width:100%;height:100%;object-fit:cover" asp-append-version=true />
                    </div>
                   
                </div>
            </div>
        </div>
        <hr />
        <div>
           
            <a class="btn btn-danger" data-dismiss="modal">بستن</a>
        </div>
    </form>


</div>

