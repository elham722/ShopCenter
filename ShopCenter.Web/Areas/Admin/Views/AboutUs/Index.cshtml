@model AboutUsViewModel
@{
    ViewData["Title"] = "درباره ما";
}

<div class="widget">
    <div class="widget-header separated">
        <span class="widget-caption">@ViewData["Title"]</span>
        <div class="widget-buttons">
            <a href="#" data-toggle="collapse">
                <i class="fa blue  fa-minus"></i>
            </a>
            <a href="#" data-toggle="dispose">
                <i class="fa fa-times danger"></i>
            </a>
        </div>
    </div>
    <div class="widget-body">
        <div class="collapse in">
            <form method="post" enctype="multipart/form-data" role="form" asp-controller="AboutUs" asp-action="Index" asp-area="Admin" method="post">
                <div class="row">
                    <div class="col-md-8">
                        <div class="form-group">
                            <label for="definpu">عنوان : </label>
                            <input asp-for="Title" type="text" class="form-control" id="definput" placeholder="عنوان را وارد کنید">
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label for="definpu">توضیحات : </label>

                            <textarea asp-for="Description" class="form-control" id="textareaanimated" placeholder="توضیحات را وارد کنید" style="overflow: hidden; overflow-wrap: break-word; resize: horizontal; height: 49px;"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="definpu">نقشه : </label>
                            <hr />
                            <iframe asp-for="Location" class="form-group" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d1925.4668752090531!2d51.59704494414625!3d35.74499423817046!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3f8e1de181637663%3A0xb607d67406d00613!2sTehran%20Province%2C%20Tehran%2C%20Behesht%20St%2C%20PHVW%2BQMM%2C%20Iran!5e0!3m2!1sen!2sus!4v1714645988458!5m2!1sen!2sus" width="400" height="300" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>

                        </div>
                    </div>

                    <div class="col-md-4">

                        <div  class="form-control">
                            <p style="font-size:large">تصویر </p>
                        </div>
                        <div>
                           
                            @if (Model.ImageName == "" || Model.ImageName == null )
                            {
                                <img id="Imagename" class="img img-thumbnail" src="/Admin/img/AboutUs/default.jpg" alt="ImageUrl" style="width:100%;height:100%;object-fit:cover" asp-append-version=true />


                            }
                            else
                            {
                                <input asp-for="ImageName" type="hidden" />
                                <img id="Imagename" class="img img-thumbnail" src="/Admin/img/AboutUs/@Model.ImageName" alt="ImageUrl" style="width:100%;height:100%;object-fit:cover" asp-append-version=true />


                            }

                        </div>
                        <div>
                            <input type="file" accept="image/*" multiple="" name="ImageUrl" asp-for="ImageUrl" id="ImageUrl" class="form-control" />
                        </div>

                    </div>
                </div>
                <hr />
                <div class="form-group">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" class="btn btn-palegreen align-content-lg-center" value="ثبت">
                </div>
            </form>
        </div>
    </div>
</div>
<script src="~/Admin/js/textarea/jquery.autosize.js"></script>
<script>
    ImageUrl.onchange = evt => {
        const [file] = ImageUrl.files
        if (file) {
            Imagename.src = URL.createObjectURL(file)
        }
    };

</script>
<script>
    $('#textareaanimated').autosize({ append: "\n" });
</script>